<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background4">

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:buttonTintMode="screen"
        android:showText="true"
        android:text="@string/covid_test_sonucu"
        android:textAlignment="center"
        android:textColor="#3F51B5"
        android:textOff="   Negatif   "
        android:textOn="  Pozitif  "
        android:textSize="18sp"
        android:thumb="@android:drawable/editbox_background_normal"
        android:thumbTint="@android:color/holo_blue_dark"
        android:typeface="monospace" />

    <Button
        android:id="@+id/signout"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="288dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="23dp"
        android:backgroundTint="#3F51B5"
        android:hint="@string/signout"
        android:onClick="logout"
        android:textAlignment="center"
        android:textColorHint="@android:color/background_light"
        android:textSize="10sp" />

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="350dp"
        android:layout_height="475dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="140dp"
        tools:context="com.example.mapwithmarker.MapsMarkerActivity" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:text="Co-Dist"
        android:textSize="25dp"
        android:textColor="#3F51B5"
        android:gravity="center"/>
</RelativeLayout>